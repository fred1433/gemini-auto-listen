{
  "manifest_version": 3,
  "name": "Gemini Auto-Listen",
  "version": "4.3",
  "description": "Lecture vocale automatique des r√©ponses Gemini",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "Gemini Auto-Listen"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
