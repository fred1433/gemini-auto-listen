{
  "manifest_version": 3,
  "name": "Gemini Auto-Listen",
  "version": "4.6",
  "description": "Automatically reads Gemini responses aloud â€” no more clicking Listen every time.",
  "permissions": ["storage"],
  "host_permissions": ["https://*.sentry.io/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "Gemini Auto-Listen"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
